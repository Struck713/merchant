{
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "outDir": "./built",
        "allowJs": true,
        "target": "es5",
        "module": "ESNEXT",
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*"
    ],
    "plugins": [
        {
            "name": "typescript-eslint-language-service"
        }
    ],
    "ts-node": {
        "esm": true,
    }
}
